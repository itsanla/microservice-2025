pipeline {
    agent any
    
    environment {
        DOCKER_HUB_CREDENTIALS = credentials('docker-hub-credentials')
        DOCKER_IMAGE = 'itsanla/buku'
        SERVICE_NAME = 'buku'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Get Version') {
            steps {
                script {
                    def tags = sh(
                        script: """curl -s 'https://registry.hub.docker.com/v2/repositories/${DOCKER_IMAGE}/tags?page_size=100' | \
                                   grep -o '"name":"[0-9]\\+\\.[0-9]\\+\\.[0-9]\\+"' | \
                                   grep -o '[0-9]\\+\\.[0-9]\\+\\.[0-9]\\+' | \
                                   sort -V | tail -1""",
                        returnStdout: true
                    ).trim()
                    
                    if (tags == '') {
                        env.NEW_VERSION = '1.0.0'
                    } else {
                        def version = tags.tokenize('.')
                        def major = version[0].toInteger()
                        def minor = version[1].toInteger()
                        def patch = version[2].toInteger() + 1
                        env.NEW_VERSION = "${major}.${minor}.${patch}"
                    }
                    
                    echo "Current version: ${tags ?: 'none'}"
                    echo "New version: ${env.NEW_VERSION}"
                }
            }
        }
        
        stage('Test') {
            steps {
                dir('perpustakaan/buku') {
                    sh './mvnw clean test'
                }
            }
        }
        
        stage('Build') {
            steps {
                dir('perpustakaan/buku') {
                    sh './mvnw clean package -DskipTests'
                }
            }
        }
        
        stage('Docker Build') {
            steps {
                dir('perpustakaan/buku') {
                    sh "docker build -t ${DOCKER_IMAGE}:${env.NEW_VERSION} ."
                    sh "docker tag ${DOCKER_IMAGE}:${env.NEW_VERSION} ${DOCKER_IMAGE}:latest"
                }
            }
        }
        
        stage('Docker Push') {
            steps {
                sh 'echo $DOCKER_HUB_CREDENTIALS_PSW | docker login -u $DOCKER_HUB_CREDENTIALS_USR --password-stdin'
                sh "docker push ${DOCKER_IMAGE}:${env.NEW_VERSION}"
                sh "docker push ${DOCKER_IMAGE}:latest"
            }
        }
        
        stage('Cleanup') {
            steps {
                sh "docker rmi ${DOCKER_IMAGE}:${env.NEW_VERSION} ${DOCKER_IMAGE}:latest"
            }
        }
    }
    
    post {
        always {
            cleanWs()
        }
        success {
            echo "✅ ${SERVICE_NAME} service v${env.NEW_VERSION} built and pushed successfully!"
        }
        failure {
            echo "❌ ${SERVICE_NAME} service build failed!"
        }
    }
}
